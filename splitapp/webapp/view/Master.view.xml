<mvc:View
    controllerName="splitapp.controller.Master"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <customHeader>
            <Bar
                id="Bar"
            >
                <contentMiddle>
                    <SearchField
                        id="searchField"
                        placeholder="Search"
                        search="onSearch"
                        liveChange="onLiveChange"
                    />
                </contentMiddle>
                <contentRight>
                    <Button
                        id="refreshButton"
                        icon="sap-icon://refresh"
                        press="onRefresh"
                    />
                    <Button
                        id="addButton"
                        text="Add"
                        icon="sap-icon://add"
                        press="onAdd"
                    />
                </contentRight>
            </Bar>
        </customHeader>

        <List
            id="StudentList"
            items="{students>/results}"
            mode="SingleSelectMaster"
            selectionChange="onSelectionChange"
        >
            <items>
                <StandardListItem
                    id="StudentListItem"
                    title="{students>Name}"
                    type="Active"
                    press="onSelectionChange"
                />
            </items>
        </List>
    </Page>
</mvc:View>
