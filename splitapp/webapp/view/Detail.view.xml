<mvc:View
    controllerName="splitapp.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
>
    <Page
        id="page"
        title="Detail"
    >
        <customHeader>
            <Bar id="BarDetail">
                <contentLeft>
                    <Button
                        id="BackButton"
                        text="Back"
                        press="onBack"
                        icon="sap-icon://nav-back"
                    />
                </contentLeft>
                <contentMiddle>
                    <Title
                        id="DetailTitle"
                        text="Detail"
                    />
                </contentMiddle>
                <contentRight>
                    <Button
                        id="AcceptButton"
                        text="Accept"
                        press="onAccept"
                        icon="sap-icon://accept"
                    />
                    <Button
                        id="RejectButton"
                        text="Reject"
                        press="onReject"
                        icon="sap-icon://decline"
                    />
                </contentRight>
            </Bar>
        </customHeader>

        <content>
            <Panel
                id="Panel"
                headerText="{documents>Bukrs} - {documents>Belnr}"
            >
                <HBox id="Hbox1">
                    <VBox
                        id="Vbox1"
                        class="sapUiSmallMarginEnd"
                    >
                        <Text
                            id="TextId"
                            text="Id"
                        />
                        <Input
                            id="InputId"
                            value="{documents>Belnr}"
                            width="auto"
                            editable="false"
                            enabled="true"
                            class="sapUiSmallMarginBottom"
                        />
                        <Text
                            id="NameText"
                            text="Name"
                        />
                        <Input
                            id="InputName"
                            value="{documents>Bukrs}"
                            width="auto"
                            editable="false"
                            enabled="true"
                        />
                    </VBox>
                    <VBox id="Vbox2">
                        <Text
                            id="DobText"
                            text="Date of birth"
                            class="customText"
                        />
                        <Input
                            id="DobInput"
                            value="{documents>Gjahr}"
                            width="auto"
                            editable="false"
                            enabled="true"
                        />
                    </VBox>
                </HBox>
            </Panel>
            <Panel
                id="TablePanel"
                headerText="{documents>Bukrs} - {documents>Belnr}"
                width="auto"
                height="auto"
            >
                <Table
                    id="UniTable"
                    items="{documents>BkpfToBseg}"
                >
                    <columns>
                        <Column id="IDColumn">
                            <Text
                                id="columnTextID"
                                text="ID"
                            />
                        </Column>
                        <Column id="UniIDColumn">
                            <Text
                                id="columnUniID"
                                text="UniID"
                            />
                        </Column>
                        <Column id="NameLabel">
                            <Text
                                id="columnTextName"
                                text="Name"
                            />
                        </Column>
                        <Column id="NameInputColumn" />
                        <!-- Add more columns as necessary -->
                    </columns>
                    <items>
                        <ColumnListItem
                            id="ColumnListItem"
                            press="onDetailPress"
                        >
                            <cells>
                                <Text
                                    id="IDText"
                                    text="{documents>Bukrs}"
                                />
                                <Text
                                    id="UniIDText"
                                    text="{documents>Belnr}"
                                />
                                 <Text
                                    id="GjahrText"
                                    text="{documents>Gjahr}"
                                />
                                <Input
                                    id="NameInput"
                                    value="{documents>Buzei}"
                                    showValueHelp="true"
                                    valueHelpRequest=".onValueHelpRequest"
                                />
                                <!-- <DatePicker
                            id="dummyDatePicker"
                            value="{students>UniName}"
                            displayFormat="long"
                        /> -->
                                <!-- <DateTimePicker
                            id="DTP1"
                            value="{path: 'students>UniName', type: 'sap.ui.model.type.DateTime', formatOptions: {style: 'long'}}"
                        /> -->

                                <!-- Bind more fields as necessary -->
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </Panel>
        </content>
    </Page>
</mvc:View>
