<mvc:View
    controllerName="splitapp.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{students>Id} - {students>Name}"
    >
        <customHeader>
            <Bar id="BarDetail">
                <contentLeft>
                    <Button
                        id="BackButton"
                        text="Back"
                        icon="sap-icon://nav-back"
                        press="onBack"
                    />
                </contentLeft>
                <contentMiddle>
                    <Title
                        id="Title"
                        text="{students>Id} - {students>Name}"
                    />
                </contentMiddle>
                <contentRight>
                    <Button
                        id="AcceptButton"
                        text="Accept"
                        icon="sap-icon://accept"
                        press="onAccept"
                    />
                </contentRight>
            </Bar>
        </customHeader>

        <Table
            id="UniTable"
            items="{students>StudentToUni/results}"
        >
            <columns>
                <Column id="IDColumn">
                    <Text
                        id="columnTextID"
                        text="ID"
                    />
                </Column>
                <Column id="UniIDColumn">
                    <Text
                        id="columnUniID"
                        text="UniID"
                    />
                </Column>
                <Column id="NameColumn">
                    <Text
                        id="columnTextName"
                        text="Name"
                    />
                </Column>

                <!-- Add more columns as necessary -->
            </columns>
            <items>
                <ColumnListItem id="ColumnListItem">
                    <cells>
                        <Text
                            id="IDText"
                            text="{students>Id}"
                        />
                        <Text
                            id="UniIDText"
                            text="{students>UniId}"
                        />

                        <Input
                            id="NameInput"
                            value="{students>UniName}"
                            editable="{= ${students>/editable}}"
                            showValueHelp="true"
                            valueHelpRequest=".onValueHelpRequest"
                        />
                        <!-- <DatePicker
                            id="dummyDatePicker"
                            value="{students>UniName}"
                            displayFormat="long"
                        /> -->
                        <!-- <DateTimePicker
                            id="DTP1"
                            value="{path: 'students>UniName', type: 'sap.ui.model.type.DateTime', formatOptions: {style: 'long'}}"
                        /> -->

                        <!-- Bind more fields as necessary -->
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>
