<mvc:View
    controllerName="splitapp.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="Detail"
    >
        <customHeader>
            <Bar id="BarDetail">
                <contentLeft>
                    <Button
                        id="BackButton"
                        text="Back"
                        press="onBack"
                        icon="sap-icon://nav-back"
                    />
                </contentLeft>
                <contentMiddle>
                    <Title text="Detail" />
                </contentMiddle>
                <contentRight>
                    <Button
                        id="AcceptButton"
                        text="Accept"
                        press="onAccept"
                        icon="sap-icon://accept"
                    />
                </contentRight>
            </Bar>
        </customHeader>
        <content>
            <VBox>
                <Panel
                    id="DetailPanel"
                    headerText="Header Detail"
                    width="auto"
                    height="auto"
                >
                    <ObjectAttribute
                        title="Date of Birth"
                        text="{students>Dob}"
                    />
                    <!-- <FlexBox>
                    <Label
                        id="DateOfBirth"
                        text="Date of Birth"
                        labelFor="DateOfBirthText"
                    />
                    <Text
                        id="DateOfBirthText"
                        text="{students>Dob}"
                    />
                </FlexBox> -->
                </Panel>
            </VBox>
            <Panel
                id="TablePanel"
                headerText="{students>Id} - {students>Name}"
                width="auto"
                height="auto"
            >
                <Table
                    id="UniTable"
                    items="{students>StudentToUni/results}"
                >
                    <columns>
                        <Column id="IDColumn">
                            <Text
                                id="columnTextID"
                                text="ID"
                            />
                        </Column>
                        <Column id="UniIDColumn">
                            <Text
                                id="columnUniID"
                                text="UniID"
                            />
                        </Column>
                        <Column id="NameColumn">
                            <Text
                                id="columnTextName"
                                text="Name"
                            />
                        </Column>

                        <!-- Add more columns as necessary -->
                    </columns>
                    <items>
                        <ColumnListItem
                            id="ColumnListItem"
                            press="onDetailPress"
                        >
                            <cells>
                                <Text
                                    id="IDText"
                                    text="{students>Id}"
                                />
                                <Text
                                    id="UniIDText"
                                    text="{students>UniId}"
                                />

                                <Input
                                    id="NameInput"
                                    value="{students>UniName}"
                                    editable="{= ${students>/editable}}"
                                    showValueHelp="true"
                                    valueHelpRequest=".onValueHelpRequest"
                                />
                                <!-- <DatePicker
                            id="dummyDatePicker"
                            value="{students>UniName}"
                            displayFormat="long"
                        /> -->
                                <!-- <DateTimePicker
                            id="DTP1"
                            value="{path: 'students>UniName', type: 'sap.ui.model.type.DateTime', formatOptions: {style: 'long'}}"
                        /> -->

                                <!-- Bind more fields as necessary -->
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </Panel>
        </content>
    </Page>
</mvc:View>
