        <content>
            <Panel
                id="Panel"
                headerText="{students>Id} - {students>Name}"
            >
                <HBox>
                    <VBox class="sapUiSmallMarginEnd">
                        <Text text="Id" />
                        <Input
                            value="{students>Id}"
                            width="auto"
                            editable="false"
                            enabled="true"
                            class="sapUiSmallMarginBottom"
                        />
                        <Text text="Name" />
                        <Input
                            value="{students>Name}"
                            width="auto"
                            editable="false"
                            enabled="true"
                        />
                    </VBox>
                    <VBox>
                        <Text
                            text="Dob"
                            class="customText"
                        />
                        <Input
                            value="{students>Dob}"
                            width="auto"
                            editable="false"
                            enabled="true"
                        />
                    </VBox>
                </HBox>
            </Panel>
            <Panel
                id="TablePanel"
                headerText="{students>Id} - {students>Name}"
                width="auto"
                height="auto"
            >
                <Table
                    id="UniTable"
                    items="{students>StudentToUni/results}"
                >
                    <columns>
                        <Column id="IDColumn">
                            <Text
                                id="columnTextID"
                                text="ID"
                            />
                        </Column>
                        <Column id="UniIDColumn">
                            <Text
                                id="columnUniID"
                                text="UniID"
                            />
                        </Column>
                        <Column id="NameLabel">
                            <Text
                                id="columnTextName"
                                text="Name"
                            />
                        </Column>
                        <Column id="NameInputColumn" />
                        <!-- Add more columns as necessary -->
                    </columns>
                    <items>
                        <ColumnListItem
                            id="ColumnListItem"
                            press="onDetailPress"
                        >
                            <cells>
                                <Text
                                    id="IDText"
                                    text="{students>Id}"
                                />
                                <Text
                                    id="UniIDText"
                                    text="{students>UniId}"
                                />
                                <Label
                                    text="University Name"
                                    labelFor="NameInput"
                                />
                                <Input
                                    id="NameInput"
                                    value="{students>UniName}"
                                    editable="{= ${students>/editable}}"
                                    showValueHelp="true"
                                    valueHelpRequest=".onValueHelpRequest"
                                />
                                <!-- <DatePicker
                            id="dummyDatePicker"
                            value="{students>UniName}"
                            displayFormat="long"
                        /> -->
                                <!-- <DateTimePicker
                            id="DTP1"
                            value="{path: 'students>UniName', type: 'sap.ui.model.type.DateTime', formatOptions: {style: 'long'}}"
                        /> -->

                                <!-- Bind more fields as necessary -->
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </Panel>
        </content>
    </Page>
</mvc:View>
